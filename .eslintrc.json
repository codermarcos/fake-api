{
    "env": {
        "browser": true,
        "commonjs": true,
        "mocha": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "mocha",
        "chai-expect",
        "chai-friendly"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 9,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "chai-expect/missing-assertion": "off",
        "chai-expect/terminating-properties": "on",
        "no-unused-expressions": "off",
        "chai-friendly/no-unused-expressions": "off",
        "no-console": "off",
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "key-spacing": [
            "error",
            {
                "mode": "minimum",
                "align": {
                    "on": "colon"
                }
            }
        ],
        "comma-style": [
            "error",
            "first"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
